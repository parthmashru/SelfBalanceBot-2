void uart_init (void)
{
	UBRR0H = (UBRR >> 8);
	UBRR0L = UBRR;
	UCSR0C |=(1<<UCSZ00)|(1<<UCSZ01);
	UCSR0B |=(1<<RXEN0)|(1<<TXEN0);
	
}
 
void uart_transmit (char data)
{
	while (!( UCSR0A & (1<<UDRE0)));
	UDR0 = data;
	
}

char uart_receive (void)
{
	while (!( UCSR0A & (1<<RXC0)));
	return UDR0;
}

void usart_transmit_string(char *str)
{

	while(*str > 0)
	{
		
		uart_transmit(*str);
		str++;
	}
}

